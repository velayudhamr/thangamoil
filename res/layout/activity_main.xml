				        android:id="@+id/receipt_btn"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:textStyle="bold"
				        style="@style/button"
				        android:text="@string/save"
				        android:layout_weight="1"
						android:textSize="23sp" />
				</TableRow>
			</TableLayout>
