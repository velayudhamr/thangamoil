				<TableRow
				    android:layout_marginTop="20sp"
				    android:id="@+id/balance_row"
			        android:layout_height="wrap_content"
			        android:layout_width="match_parent"
				    android:gravity="center">
				    <TextView
			        	android:text="@string/balance"
